        <script><![CDATA[function createChild() {
var gr = new GlideRecord('x_1107692_banking_accountant');
gr.initialize();

// Add a query to find the child record based on the parent number
gr.addQuery('u_parent.number', current.number);
gr.query();

if (gr.next()) {
// If a matching child record is found, set the reference field and update
gr.parent_account = current.sys_id; // assuming 'sys_id' is the correct reference field
gr.update();
} else {
// If no matching child record is found, insert a new record
gr.initialize();
gr.test = current.test;
gr.gender = current.gender;
gr.account_category = 'child';
gr.dob = current.dob;
gr.pan_number=current.pan_number;
gr.parent_account = current.sys_id;
gr.insert();
}

action.setRedirectURL("/x_1107692_banking_accountant.do?sys_id=" + gr.sys_id);
}

createChild();]]></script>
